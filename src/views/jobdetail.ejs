<div class="job-container" style="margin:1rem  auto;">
  <div class="banner">
    <img src="/images/jobbanner.png" alt="">
  </div>
  <h1 style="font-weight: 100; text-align: center;"> <span class="text-danger">
      <%=job.jobdesignation%>
    </span> <span class="text-success">oppertunity in <%=job.joblocation%> at</span> <span class="text-info">
      <%=job.companyname%>
    </span>
  </h1>

  <div class="details">
    <%if(locals.userEmail){ %>

      <span class="bg-warning  border border-success m-2 p-2 border-opacity-50 rounded h-3">Actively hiring <i
          class="fa-light fa-arrow-trend-up"></i></i>

      </span><span><a href="/update-jobs/<%=job.id%>"><i class="fa-regular fa-pen-to-square"
            style="color: black;"></i></a>
        <a href="/delete-jobs/<%=job.id%>"><i class="fa-solid fa-trash" style="color: black;"></i></a>
      </span>
      <%}%>

        <h3 style="margin:1rem 0; font-weight: 100;">
          <%=job.companyname%>
        </h3>
        <div style="font-size: 1.2rem;">
          <%=job.jobcategory%> <span class="text-success">
              <%=job.jobdesignation%>
            </span>
        </div>
        <br>
        <ul type="none" style="font-size: 1.2rem;">
          <li>
            <i class="fa-solid fa-map-pin" style="color: black;"></i>
            <%=job.joblocation%>
          </li>
          <li>
            <i class="fa-solid fa-indian-rupee-sign" style="color: black;"></i>
            <%=job.salary%>
          </li>
          <li><i class="fa-solid fa-hourglass-start" style="color: black;"></i> Apply By <%=job.applyby%>
          </li>
          <li><i class="fa-solid fa-signal" style="color: black;"></i> Number of openings <%=job.numberofopenings%>
          </li>
          <li class="text-danger"><a href="/jobs/applicant/<%=job.id%>" style="color: red; text-decoration: none;">
              <i class="fa-solid fa-person" style="color: red;"></i> Applicants
              <%=job.applicants.length%>

            </a>
          </li>
        </ul>
        <div>
          <% job.skillsrequired.forEach(s=>{%>
            <button class="skill">
              <%=s%>

            </button>

            <%})%>
        </div>
        <br>
        <button data-bs-toggle="modal" data-bs-target="#applyModal" class="btn btn-md btn-primary px-5 my-2">
          Apply Now
        </button><br><br>
        <span class="bg-success  border border-success m-2 p-2 border-opacity-50  h-3">Posted:<%=job.jobposted%>
        </span>


  </div>
  <div class="modal fade" id="applyModal" tabindex="-1" aria-labelledby="applyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5 text-success" id="exampleModalLabel">
            easily!
          </h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/apply/<%=job.id%>" method="post" class="p-2" enctype="multipart/form-data">
            <div class="mb-3">
              <div class="input-group">
                <span class="input-group-text">Name</span>
                <input required name="applicantName" type="text" aria-label="applicantName" class="form-control"
                  placeholder="enter your name" />
              </div>
            </div>
            <div class="mb-3">
              <div class="input-group">
                <span class="input-group-text">Email</span>
                <input required name="email" type="email" aria-label="email" class="form-control"
                  placeholder="enter your email" />
              </div>
            </div>
            <div class="mb-3">
              <div class="input-group">
                <span class="input-group-text">Contact</span>
                <input required name="contact" type="text" aria-label="number" class="form-control"
                  placeholder="+91_ _ _ " />
              </div>
            </div>
            <div class="input-group mb-3">
              <label class="input-group-text" for="resume">Resume</label>
              <input name="resume" type="file" class="form-control" id="resume" required  accept="application/pdf">
            </div>

            <button type="submit" class="btn btn-md mt-2 lbtn text-white bg-success border">Submit</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>


</div>